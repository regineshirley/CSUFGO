<html>
	<head>
		<title>CSUF GO</title>
		<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    	<script src="/javascripts/angularApp.js"></script>
	</head>
	<body ng-app="CSUFGO">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<ui-view></ui-view>
			</div>
		</div>




<!--Home template-->
		<script type="text/ng-template" id="/home.html">
			<div class="page-header">
				<h1>CSUF GO</h1>
			</div>

			<div ng-repeat="event in events">
				<h3> {{event.title}}
					<span>
  						<a href="#/events/{{event._id}}">Details</a>
					</span>
				</h3>
				<!--
				Time: {{event.time}} <br>
				Location: {{event.location}} <br>
				Contact: {{event.contact}} <br>
				Description: {{event.description}} <br> -->
			</div>

      <button type="submit" class="btn btn-primary" ui-sref="createEvent">Create An Event</button>
		</script>






<!--Event template-->
		<script type="text/ng-template" id="/events.html">
  			<div class="page-header">
    			<h3>Event Description Page</h3>
  			</div>

  			<div>
				<h3> {{event.title}} </h3>
				Time: {{event.time}} <br>
				Location: {{event.location}} <br>
				Contact: {{event.contact}} <br>
				Description: {{event.description}} <br>
			</div>
			<br>
			<h4>Subscribers</h4>
  			<div ng-repeat="subscriber in event.subscribers">
    			{{subscriber.firstname}} {{subscriber.lastname}}
  			</div>

  			<form ng-submit="addSubscriber()" style="margin-top:30px;">
    			<h3>Subscribe Now!</h3>
    			<div class="form-group">
      				<input type="text" class="form-control" placeholder="First Name" ng-model="firstname">
      				</input>
      				<input type="text" class="form-control" placeholder="Last Name" ng-model="lastname">
      				</input>
    			</div>
    			<button type="submit" class="btn btn-primary">Subscriber</button>
  			</form>
		</script>





<!--Create Event template-->
    <script type="text/ng-template" id="/createEvent.html">
      <div class="page-header">
        <h1>CSUF GO</h1>
      </div>


    
        <!--
        Time: {{event.time}} <br>
        Location: {{event.location}} <br>
        Contact: {{event.contact}} <br>
        Description: {{event.description}} <br> -->
      


      <form ng-submit="addEvent()" style="margin-top:30px;">
        <h3>Add a new event</h3>
        <div class="form-group">
                <input type="text"
                  class="form-control"
                  placeholder="Title"
                  ng-model="title"></input>
            </div>
            <div class="form-group">
              <input type="text"
                class="form-control"
                placeholder="Time"
                ng-model="time"></input>
            </div>
            <div class="form-group">
              <input type="text"
                class="form-control"
                placeholder="Location"
                ng-model="location"></input>
            </div>
            <div class="form-group">
              <input type="text"
                class="form-control"
                placeholder="Contact Info"
                ng-model="contact"></input>
            </div>
            <div class="form-group">
              <input type="text"
                class="form-control"
                placeholder="Description"
                ng-model="description"></input>
            </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="submit" class="btn btn-primary" ui-sref="home">Return to Home</button>
      </form>
    </script>





	</body>
</html>
